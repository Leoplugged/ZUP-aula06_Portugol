programa {
	funcao inicio() {
		inteiro primeiroNumero
		inteiro segundoNumero
		inteiro resultado
		
		escreva("Para a soma de dois valores, digite o primeiro valor: ")
		leia(primeiroNumero)
		escreva("Digite o segundo valor: ")
		leia(segundoNumero)
		resultado = primeiroNumero + segundoNumero
		escreva("A soma entre ", primeiroNumero," e ", segundoNumero, " é ", resultado, ".\n")
	}
}
